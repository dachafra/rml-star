@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rml: <http://w3id.org/rml/core/> .
@prefix rmls: <http://w3id.org/rml/star/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Validate an RMLS Star Map
schema:RMLSStarMapShape
    a sh:NodeShape ;
    sh:targetClass rmls:StarMap ;
    sh:message "rmls:StarMap" ;
    sh:description """
    Represents a star map.
    """ ;
    sh:message """
    rmls:StarMap requires exactly one rml:subject or one rml:subjectMap and zero
    or more rml:predicateObjectMaps
    """ ;
    sh:ignoredProperties (rdf:type) ;

    # rmls:quotedTriplesMap
    sh:property [
        sh:path rmls:quotedTriplesMap ;
        sh:name "rmls:quotedTriplesMap" ;
        sh:description """

        """ ;
        sh:message """
        Exactly one rmls:quotedTriplesMap is required.
        """ ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    sh:property [
        sh:path rml:joinCondition ;
        sh:name "rml:joinCondition" ;
        sh:description """
        Specifies the join condition for joining the child logical table with 
        the parent logical table of the foreign key constraint.
        """ ;
        sh:message """
        rml:joinCondition must specify an rml:parent and rml:child.
        """ ;
        sh:nodeKind sh:BlankNodeOrIRI ;

        # rml:parent
        sh:property [
            sh:path rml:parent ;
            sh:name "rml:parent" ;
            sh:description """
            Names a column in the parent table of a join.
            """ ;
            sh:message """
            rml:parent must be string and only occur once.
            """ ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:datatype xsd:string ;
        ] ;

        # rml:child
        sh:property [
            sh:path rml:child ;
            sh:name "rml:child" ;
            sh:description """
            Names a column in the child table of a join.
            """ ;
            sh:message """
            rml:child must be string and only occur once.
            """ ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:nodeKind sh:Literal ;
            sh:datatype xsd:string ;
        ] ;
    ] ;
.
