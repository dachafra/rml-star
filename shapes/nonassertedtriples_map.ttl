@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rml: <http://w3id.org/rml/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Validate an RMLS Non Asserted Triples Map
schema:RMLSNonAssertedTriplesMapShape
    a sh:NodeShape ;
    sh:targetClass rml:NonAssertedTriplesMap ;
    sh:message "NonAssertedTriplesMap" ;
    sh:description """
    Represents a non asserted triples map.
    """ ;
    sh:message """
    NonAssertedTriplesMap requires exactly one rml:subject or 
    one rml:subjectMap and zero or more rml:predicateObjectMaps
    and exactly one rml:logicalSource.
    """ ;

    # rml:logicalSource
    sh:property [
        sh:path rml:logicalSource ;
        sh:name "logicalSource" ;
        sh:description """
        A logical source is any source that is mapped to RDF triples.
        """ ;
        sh:message """
        Exactly one rml:logicalSource is required to access the data source.
        """ ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    # Either an rml:subject or rml:SubjectMap is required
    sh:property [
        sh:path [sh:alternativePath (rml:subjectMap rml:subject)] ;
        sh:name "subjectMap/subject" ;
        sh:description """
        Either one rml:subject or one rml:SubjectMap is required, not both.
        """ ;
        sh:message """
        Either one rml:subject or one rml:SubjectMap is required, not both.
        """ ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;

    # rml:subjectMap
    sh:property [
        sh:path rml:subjectMap ;
        sh:name "subjectMap" ;
        sh:description """
        A Subject Map element to generate a subject for RDF triples.
        """ ;
        sh:message """
        rml:SubjectMap must be an IRI or blank node.
        """ ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:node schema:RMLSubjectMapShape ;
    ] ;

    # rml:subject
    sh:property [
        sh:path rml:subject ;
        sh:name "subject" ;
        sh:description """
        An IRI reference for use as subject for all generated RDF triples.
        """ ;
        sh:message """
        rml:subject must be an IRI or blank node.
        """ ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:node schema:RMLsubjectShape ;
    ] ;

    # rml:predicateObjectMap
    sh:property [
        sh:path rml:predicateObjectMap ;
        sh:name "predicateObjectMap" ;
        sh:description """
        A Predicate Object Map element to generate (predicate, object) pair.
        """ ;
        sh:message """
        rml:PredicateObjectMap must be an IRI or blank node.
        """ ;
        sh:minCount 0 ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:node schema:RMLPredicateObjectMapShape ; 
    ] ;
.
